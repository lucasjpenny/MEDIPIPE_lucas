## Althought the cluster configuration was deprecated due to the limitation of
## workflow's portability, the "__default__" can be used to specify uniform std
## and err in the cluster mode

{
    "__default__":
    {
        "jid": "{rule}_{wildcards.sample}",
        "std": "logs_cluster/submit_{rule}_{wildcards.sample}_%j.out",
        "err": "logs_cluster/submit_{rule}_{wildcards.sample}_%j.err"
    },
    "create_metrics_summary":
    {
        "jid": "create_metrics_summary",
        "std": "logs_cluster/submit_create_metrics_summary_%j.out",
        "err": "logs_cluster/submit_create_metrics_summary_%j.err"
    },
    "create_metrics_summary_virus":
    {
        "jid": "create_metrics_summary_virus",
        "std": "logs_cluster/submit_create_metrics_summary_virus_%j.out",
        "err": "logs_cluster/submit_create_metrics_summary_virus_%j.err"
    },
    "extract_hpviewer_summary":
    {
        "jid": "extract_hpviewer_summary",
        "std": "logs_cluster/submit_extract_hpviewer_summary_%j.out",
        "err": "logs_cluster/submit_extract_hpviewer_summary_%j.err"
    },
    "create_hpviewer_summary":
    {
        "jid": "create_hpviewer_summary",
        "std": "logs_cluster/submit_create_hpviewer_summary_%j.out",
        "err": "logs_cluster/submit_create_hpviewer_summary_%j.err"
    }
}



